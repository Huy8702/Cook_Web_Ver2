@using System.Collections;
@using Microsoft.AspNetCore.Identity;

@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "List all roles";
}
<h1>All roles</h1>
<h2 class="text-danger">@ViewBag.ErrorMessage</h2>

@if (Model.Any())
{
    <a asp-action="CreateRole" asp-controller="Roles"
       class="btn btn-primary mb-3" style="width:auto">
        Add new role
    </a>

    foreach (var role in Model)
    {
        <div class="card mb-5">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Role Name: @role.Name
                </h5>
            </div>
            <div class="card-footer">     
                <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                    <a asp-controller="Roles" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete user : @role.Name')">
                        Delete
                    </button>
                </form>
            </div>
        </div>

    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h1 class="card-title">
                Create a first role
            </h1>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">
                Create new role
            </a>
        </div>
    </div>
}