@model IEnumerable<CookWeb_Ver2.Data.OrderDetail>

@{
    ViewData["Title"] = "Index";
}
<style>
    #sortable {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 100%;
    }

        #sortable li {
            margin: 10px 10px 10px 0;
            padding: 1px;
            float: left;
            width: 100px;
            height: 90px;
            font-size: 4em;
            text-align: center;
        }
</style>
<h1>Sắp xếp món</h1>

<div class="row">
    <div class="col-md-10">
        <ul id="sortable">
            @foreach (var item in Model)
            {
                <li class="ui-state-default">
                    <label style="display:none;">@Html.DisplayFor(modelItem => item.Id)</label>
                    <img class="" src="@Html.DisplayFor(modelItem => item.Recipes.ImagePath)" style="max-width:100%;" />
                    <div style="font-size:10px;">@Html.DisplayFor(modelItem => item.Recipes.Name)</div>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <button id="save-button" class="btn btn-primary">Save</button>
        <button id="reset-button" class="btn btn-danger">Reset</button>
    </div>
</div>

<script>
    $(function () {
        $("#sortable").sortable();
        $("#sortable").disableSelection();
        // Xử lý khi click vào nút Lưu thay đổi
        $('#save-button').click(function () {
            var sortedList = [];
            // Lấy danh sách các món ăn theo thứ tự sau khi đã sắp xếp
            $("#sortable li").each(function () {
                var foodName = $(this).find("label").text().trim();
                var intValue = parseInt(foodName);
                sortedList.push(intValue);
            });
            // Gọi đến hàm xử lý cập nhật cơ sở dữ liệu và truyền vào danh sách các món ăn đã sắp xếp
            updateDatabase(sortedList);

        });
        $('#reset-button').click(function () {
            location.reload();
        });

    });

    function updateDatabase(sortedList) {
        
        $.ajax({
            url: '/Monitors/UpdateFoodPositions',
            type: 'POST',
            data: { sortedList: sortedList },
            //contentType: 'application/json',
            success: function (response) {
                alert('Update successful!');
            },
            error: function (xhr, status, error) {
                alert('Got an error: ' + error);
            }
        });
    }
</script>