@model List<OrderDetailViewModel>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>
                Add or remove users from this role
            </h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsChecked" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsChecked">
                        @Model[i].RecipeId
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Accept">Cancel</a>
        </div>
    </div>
</form>